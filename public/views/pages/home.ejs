<div class="card-container is-clearfix">
    <% for (let i = articles.length - 1; i >= 0; i--) { %>
    <div class="card">
        <header class="card-header">
            <p class="card-header-title">
                <%= articles[i].title %>
            </p>
        </header>
        <div class="card-content">
            <div class="content">
                <%= articles[i].summary %>
                <br>
                <time><%= articles[i].date %></time>
            </div>
        </div>
        <footer class="card-footer" articleId="<%= articles[i]._id %>">
            <a href="#" class="saveArticle card-footer-item">Save</a>
            <a target="_blank" href="<%= articles[i].link %>" class="card-footer-item">View on NPR</a>
        </footer>
    </div>
    <% } %>
</div>